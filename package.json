{
  "name": "the-inn",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --config ./webpack/webpack.dev.config.js --mode development",
    "build:prod": "webpack --config ./webpack/webpack.prod.config.js --mode production",
    "test": "jest --passWithNoTests",
    "build:profile": "webpack --config ./webpack/webpack.prod.config.js --mode production --profile --json > stats.json",
    "analyze": "webpack-bundle-analyzer ./stats.json"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^2.0.1",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.6.0",
    "jest-css-modules": "^2.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react-hot-loader": "^4.8.2",
    "redux-mock-store": "^1.5.3",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "axios": "^0.18.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "moduleNameMapper": {
      "^@components(.*)": "<rootDir>/src/components$1",
      "^@pages(.*)": "<rootDir>/src/pages$1",
      "^@assets(.*)": "<rootDir>/src/assets$1",
      "\\.module\\.css$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "jest",
      "describe",
      "it",
      "beforeEach",
      "expect"
    ]
  }
}
